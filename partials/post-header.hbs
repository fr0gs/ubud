<header class='c-post-header'>
  <h1 class='c-post-header__title'>{{ title }}</h1>

  {{#if custom_excerpt}}
    <p class='c-post-header__excerpt'>{{ custom_excerpt }}</p>
  {{/if}}

  {{#is 'post'}}
    <div class='c-post-header__meta'>
      {{#primary_author}}
        <a href='{{ url }}' class='c-post-header__author'>
          {{#if profile_image}}
            <div class='c-post-header__author_media'>
              <img class='c-post-header__author_image lazyload' data-src='{{ img_url profile_image size='profile-image-small' }}' alt='{{ name }}' width='32' height='32'>
            </div>
          {{/if}}
          <div class='c-post-header__author_info'>
            <div class='c-post-header__author_name'>{{ name }}</div>{{/primary_author}}
            <time class='c-post-header__date' datetime='{{ date format='YYYY-MM-DD' }}'>{{ date format='DD MMMM YYYY' }} . </time>
            <span class='c-post-header__reading-time'>{{ reading_time minute=(t '1 min read') minutes=(t '% min read') }}</span>
          </div>
        </a>
    </div>
  {{/is}}

  {{#if feature_image}}
    <figure class='c-post-image-wrap'>
      <img
        alt='{{ title }}'
        class='c-post-image lazyload'
        data-srcset='
          {{ img_url feature_image size='post-image' }} 612w,
          {{ img_url feature_image size='post-image-large' }} 1462w'
        sizes='(min-width: 1300px) 731px, (min-width: 1040px) calc(44.58vw + 160px), (min-width: 640px) calc(90vw - 61px), calc(100vw - 32px)'
        data-src='{{ img_url feature_image size='post-image-large' }}'
      >
    </figure>
  {{/if}}
</header>